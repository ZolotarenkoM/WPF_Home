<Window x:Class="WPF_HOME.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Home expenses" Height="500" Width="836.246">
    <Grid Margin="0,0,2,0">
        <Menu HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="826">
            <MenuItem Header="File" Click="MenuItem_Click">
                <MenuItem Header="Save" HorizontalAlignment="Left" Width="145"/>
                <MenuItem Header="Exit" HorizontalAlignment="Left" Width="145"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About" HorizontalAlignment="Left" Width="145"/>
            </MenuItem>
        </Menu>
        <TabControl HorizontalAlignment="Left" Height="447" Margin="0,23,0,0" VerticalAlignment="Top" Width="826">
            <TabItem Header="Add product">
                <Grid Background="#FFE5E5E5">
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="33,58,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.708,1.162"/>
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="187,58,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="78" RenderTransformOrigin="0.708,1.162"/>
                    <DatePicker HorizontalAlignment="Left" Margin="33,131,0,0" VerticalAlignment="Top" Height="22" Width="120"/>
                    <ComboBox HorizontalAlignment="Left" Margin="187,131,0,0" VerticalAlignment="Top" Width="120" ToolTip="" IsDropDownOpen="True">
                        <ComboBoxItem Content="Продукти" HorizontalAlignment="Left" Width="118"/>
                    </ComboBox>
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="368,130,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                    <ListView HorizontalAlignment="Center" Height="230" Margin="10,175,0,0" VerticalAlignment="Top" Width="796" IsHitTestVisible="True">
                        <ListView.View>
                            <GridView>
                                <GridView.Columns>
                                    <GridViewColumn Header="Id" Width="2"> </GridViewColumn>
                                    <GridViewColumn Header="Name" Width="180"></GridViewColumn>
                                    <GridViewColumn Header="Price UAH" Width="85"></GridViewColumn>
                                    <GridViewColumn Header="Count" Width="65"></GridViewColumn>
                                    <GridViewColumn Header="Total Price" Width="95"></GridViewColumn>
                                    <GridViewColumn Header="Type" Width="180"></GridViewColumn>
                                    <GridViewColumn Header="Date" Width="185"></GridViewColumn>
                                </GridView.Columns>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Select">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
